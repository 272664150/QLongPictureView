<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_610F0F0F">

    <com.example.longpictureview.LongPictureView
        android:id="@+id/view_long_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="@dimen/dp_close_width"
        android:layout_height="@dimen/dp_close_height"
        android:layout_gravity="left|top"
        android:layout_marginLeft="@dimen/dp_common_margin"
        android:layout_marginTop="@dimen/dp_common_margin"
        app:srcCompat="@drawable/ic_close" />
</FrameLayout>